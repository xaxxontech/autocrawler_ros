<launch>
	
	<node pkg="autocrawler" type="odom_tf.py" name="odom_tf" required="true" output="screen" >
		<param name="odom_lag" value="0.035"/> 
	</node>

	<node pkg="autocrawler" type="arcmove_globalpath_follower.py" name="arcmove_globalpath_follower" output="screen"
		required="true" /> 

	<!-- depth cam-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="base_to_astra_broadcaster" 
		args="-0.054 0.048 0.29 0 0 0 base_link camera_depth_frame" />

	<arg name="camera"      default="camera"/>
	<arg name="publish_tf"  default="false"/>
	<arg name="skipframes"      default="1"/>
	<arg name="depth_registration"  default="false"/>
	<arg name="use_device_time" default="false"/>
	<arg     if="$(arg depth_registration)" name="depth" value="depth_registered" />
	<arg unless="$(arg depth_registration)" name="depth" value="depth" />
	<param name="/camera/driver/data_skip" value="$(arg skipframes)" />
	<param name="/camera/driver/use_device_time" value="$(arg use_device_time)" />
	<include file="$(find astra_camera)/launch/astrapro.launch" >
		<arg name="publish_tf" value="$(arg publish_tf)"/>
		    <arg name="rgb_processing" value="false" />
			<arg name="depth_registration" value="false" /> 
			<arg name="depth_processing" value="true" />
	</include>

	<!-- Run the depthimage_to_laserscan node -->
	<arg name="scan_topic" default="scan"/>
	<arg name = "floorplane_scan_enable" default="false"/>
	<arg name = "horiz_angle_offset" default="-0.031416"/>
    <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan" args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet $(arg camera)/$(arg camera)_nodelet_manager">
      <param name="scan_height" value="5"/>  
      <param name="output_frame_id" value="$(arg camera)_depth_frame"/>
      <param name="range_min" value="0.45"/>
      <param name="floorplane_scan_enable" value="$(arg floorplane_scan_enable)" />
      <param name="horiz_angle_offset" value="$(arg horiz_angle_offset)" />
      <remap from="image" to="$(arg camera)/$(arg depth)/image_raw"/>
      <remap from="scan" to="$(arg scan_topic)"/>
      <remap from="$(arg camera)/image" to="$(arg camera)/$(arg depth)/image_raw"/>
      <remap from="$(arg camera)/scan" to="$(arg scan_topic)"/>
    </node>

	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<rosparam file="$(find autocrawler)/astraparams/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find autocrawler)/astraparams/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find autocrawler)/astraparams/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find autocrawler)/astraparams/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find autocrawler)/astraparams/global_planner_params.yaml" command="load" />

		<rosparam file="$(find autocrawler)/astraparams/dwa_local_planner_params.yaml" command="load" />
		<rosparam file="$(find autocrawler)/astraparams/move_base_params.yaml" command="load" />
	</node>	
	
	<arg name="map" default="map.yaml" />
	<node name="map_server" pkg="map_server" type="map_server" args="$(find autocrawler)/maps/$(arg map)"
		required="true" clear_params="true" />

	<include file="$(find autocrawler)/launch/amcl.launch" />
	
</launch>
